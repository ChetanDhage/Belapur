# Security Essentials
NODE_ENV=production
PORT=5000
MONGODB_URI=mongodb://<db-username>:<db-password>@<db-host>:27017/<db-name>?authSource=admin
MONGO_MAX_POOL_SIZE=10
MONGO_SOCKET_TIMEOUT=45000
MONGO_RETRY_WRITES=true
CLIENT_URL=https://<your-frontend-domain>
JWT_SECRET=<your-secure-jwt-secret>
JWT_EXPIRE=1d

# Email Configuration
EMAIL_HOST=<your-smtp-server>  # e.g., smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=<your-email-address>
EMAIL_PASSWORD=<your-email-password>
EMAIL_FROM=<no-reply-email-address>

# Rate Limiting
MAX_REQUESTS=100
BOOKING_LIMIT=5

# Admin Initial Credentials (Change after first login)
ADMIN_EMAIL=<admin-email>
ADMIN_PASSWORD=<strong-admin-password>
